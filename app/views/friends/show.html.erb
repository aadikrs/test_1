<p id="notice"><%= notice %></p>

<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= @friend.first_name %> <%= @friend.last_name %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= @friend.twitter %></h6>
    <p class="card-text"><%= @friend.phone %></p>
    <a href="mailto:someone@yoursite.com" class="card-link"><%= @friend.email %></a>
    <br><br>
    <%= link_to 'Edit', edit_friend_path(@friend),  class:"btn btn-light" %>
    <%= link_to 'Back', friends_path,  class:"btn btn-light" %>
    
  </div>
</div>





